<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="il.ac.tau.cloudweb17a.hasorkim">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ReportEventActivity"
            android:label="@string/title_activity_report_event" />
        <activity
            android:name=".VetListActivity"
            android:label="@string/title_activity_vet_list"
            android:parentActivityName=".MapsActivity" />

        <activity
            android:name=".VeterinaryClinicMoreDetailsActivity"
            android:label="@string/title_activity_veterinay_clinic_more_details" />

        <activity
            android:name=".NewEventMoreDetailsRequestActivity"
            android:label="@string/title_more_details_request" />
        <activity
            android:name=".ActiveReportActivity"
            android:label="דיווח פעיל" />
        <activity
            android:name=".ReportListActivity"
            android:label="רשימת דיווחים" />
        <activity
            android:name=".VetListMapActivity"
            android:label="@string/title_activity_vet_list" />


        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".FetchAddressIntentService"
            android:exported="false" />

        <service
            android:name=".MessagingService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MapsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="il.ac.tau.cloudweb17a.hasorkim.MapsActivity" />
        </activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/dog_icon" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

    </application>

</manifest>